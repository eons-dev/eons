{
  "name": "eons",
  "type": "lib",
  "clear_build_path" : true,
  "build_in" : "github",
  "next": [
    {
      "build" : "py_package",
      "build_in" : "out",
      "copy" : [
        {"../../src/" : "src/"},
        {"../../inc/" : "inc/"},
        {"../../test/" : "test/"},
        {"../../README.md" : "README.md"},
        {"../../LICENSE" : "LICENSE"}
      ],
      "config" : {
        "clear_build_path" : false,
        "author_name" : "eons",
        "author_email" : "support@eons.llc",
        "description" : "eons library",
        "package_url" : "https://github.com/eons-dev/lib_eons",
        "license" : "MIT License",
        "python_min" : "3.7",
        "classifiers" : [
          "Development Status :: 4 - Beta"
        ],
        "next" : [
          {
            "build" : "py_install",
            "build_in" : "../",
            "config" : {}
          }
        ]
      }
    },
    {
      "build" : "py_test",
      "build_in" : "./",
      "config" : {
        "clear_build_path" : false,
        "test_path" : "./test/unit/",
        "next" : [
          {
            "build" : "test",
            "build_in" : "./",
            "config": {
              "test_path" : "./test/integration/",
              "test_fixture" : "repo_connection.json"
            }
          }
        ]
      }
    },
    {
      "run_when" : [
        "release"
      ],
      "build" : "py_publish",
      "build_in" : "./",
      "config" : {}
    }
  ]
}