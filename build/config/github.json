{
  "next": [
    {
      "run_when_any" : [
        "push",
        "pull_request",
        "release"
      ],
      "build" : "proxy",
      "build_in" : "lib_eons",
      "copy" : [
        {"../../../src/" : "lib_eons/src/"},
        {"../../../inc/" : "lib_eons/inc/"},
        {"../../../test/" : "lib_eons/test/"},
        {"../../../README.md" : "lib_eons/README.md"},
        {"../../../LICENSE" : "lib_eons/LICENSE"}
      ],
      "config" : {
        "clear_build_path" : false,
        "proxy" : "../../config/local.json",
        "next" : [
          {
            "run_when_any" : [
              "release"
            ],
            "build" : "py_publish",
            "build_in" : "./",
            "config" : {
              "clear_build_path" : false
            }
          }
        ]
      }
    },
    {
      "run_when_any" : [
        "schedule"
      ],
      "build" : "proxy",
      "build_in" : "./",
      "config" : {
        "clear_build_path" : false,
        "proxy" : "../../config/schedule.json"
      }
    }
  ]
}