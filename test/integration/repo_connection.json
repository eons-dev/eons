{
  "name" : "testexecutor",
  "type" : "bin",
  "clear_build_path" : false,
  "build_in" : "bin_test-executor",
  "next": [
	{
	  "build" : "py_package",
	  "config" : {
	    "author_name" : "eons",
        "author_email" : "support@eons.llc",
        "description" : "Test Executor",
        "package_url" : "https://github.com/eons-dev/lib_eons",
        "license" : "MIT License",
        "python_min" : "3.7",
        "classifiers" : [
          "Development Status :: 3 - Alpha"
        ],
        "requirements" : [
          "pip",
          "build",
          "wheel",
          "setuptools",
          "twine",
          "pytest"
        ],
        "next" : [
          {
            "build" : "py_install",
            "build_in" : "../",
            "config" : {}
          }
        ]
      }
    },
    {
      "build" : "test_case",
      "config" : {
        "assertions" : [
          {
            "kind" : "command",
            "check" : "output",
            "command" : "testexecutor --verbosity 0",
            "expected" : [
              "Hello world!",
              ""
            ],
            "comparator" : "eq"
          }
        ]
      }
    }
  ]
}
